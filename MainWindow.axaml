<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="DictionaryGui.MainWindow"
        Width="900"
        Height="600"
        Title="F# Digital Dictionary">
  <Grid RowDefinitions="Auto,Auto,Auto,*,Auto"
        ColumnDefinitions="*,*">

    <!-- Word / definition inputs -->
    <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Word:" VerticalAlignment="Center"/>
      <TextBox x:Name="wordBox" Width="200"/>
      <TextBlock Text="Definition:" Margin="10,0,0,0" VerticalAlignment="Center"/>
      <TextBox x:Name="definitionBox" Width="400"/>
      <Button x:Name="addUpdateButton" Content="Add / Update" Margin="10,0,0,0"/>
    </StackPanel>

    <!-- Search controls -->
    <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal" Spacing="8">
      <TextBlock Text="Search:" VerticalAlignment="Center"/>
      <TextBox x:Name="searchBox" Width="250"/>
      <ComboBox x:Name="searchModeBox" Width="220" SelectedIndex="0">
        <ComboBoxItem Content="Exact word" />
        <ComboBoxItem Content="Partial word" />
        <ComboBoxItem Content="Word or definition" />
      </ComboBox>
      <Button x:Name="searchButton" Content="Search" Margin="10,0,0,0"/>
      <Button x:Name="clearSearchButton" Content="Clear" Margin="4,0,0,0"/>
    </StackPanel>

    <!-- Results list -->
    <Grid Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="2" Margin="10">
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto" />
        <RowDefinition Height="*" />
      </Grid.RowDefinitions>
      <TextBlock Text="Entries" FontWeight="Bold" Margin="0,0,0,4" />
      <ListBox x:Name="resultsList" Grid.Row="1">
        <ListBox.ItemTemplate>
          <DataTemplate>
            <StackPanel Orientation="Horizontal" Spacing="6">
              <TextBlock Text="{Binding Word}" FontWeight="Bold"/>
              <TextBlock Text=" - " />
              <TextBlock Text="{Binding Definition}" />
            </StackPanel>
          </DataTemplate>
        </ListBox.ItemTemplate>
      </ListBox>
    </Grid>

    <!-- Bottom buttons -->
    <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Margin="10" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button x:Name="deleteButton" Content="Delete Selected" />
      <Button x:Name="saveButton" Content="Save" />
      <Button x:Name="loadButton" Content="Load" />
      <Button x:Name="exitButton" Content="Exit" />
    </StackPanel>
  </Grid>
</Window>


